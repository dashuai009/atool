{
  "build": {
    "beforeDevCommand": "npm run start",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist/atool/browser"
  },
  "package": {
    "productName": "atool",
    "version": "0.0.3"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      },
      "clipboard": {
        "all": false,
        "readText": false,
        "writeText": true
      },
      "dialog": {
        "all": false,
        "ask": false,
        "confirm": false,
        "message": false,
        "open": true,
        "save": false
      },
      "fs": {
        "all": true,
        "scope": ["$APPDATA/databases/*"]
      },
      "protocol": {
        "all": false,
        "asset": true,
        "assetScope": []
      }
    },
    "windows": [
      {
        "title": "atool",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": null
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "icu.dashuai009.atool",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "resources" :[
        "third-party/ffmpeg/*"
      ]
    },
    "updater": {
      "active": true,
      "endpoints": [
        "https://cdn.crabnebula.app/update/dashuai009/atool/{{target}}-{{arch}}/{{current_version}}"
      ],
      "dialog": true,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDcxMjcwQjI2ODY3QUI2RjYKUldUMnRucUdKZ3NuY1NQcklGUER2dkxDQ0Vyc04vWXpFbEliNUhtK2NqTGlzSUNycGx1Vk1SNm4K"
    }
  }
}
